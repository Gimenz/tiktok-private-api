{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "removeComments": false,
    "alwaysStrict": true,
    "pretty": true,
    "target": "ES2020",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": false
  },
  "include": ["src/**/**/*.ts"]
}
